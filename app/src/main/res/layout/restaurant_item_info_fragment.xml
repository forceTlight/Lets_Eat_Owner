<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".store.Store_Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosansbold"
            android:gravity="center|bottom"
            android:text="식당 정보"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/info_textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 이름"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/info_textView3"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/register_edge"
                            android:fontFamily="@font/notosansregular"
                            android:maxLength="50"
                            android:text="하오탕"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 전화번호"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/info_textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansregular"
                            android:maxLength="20"
                            android:background="@drawable/register_edge"
                            android:text="031-000-0000"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="운영 시간"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/info_textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansregular"
                            android:maxLength="40"
                            android:textColor="#000000"
                            android:background="@drawable/register_edge"
                            android:text="일요일 휴무, 09:00 ~ 22:00"
                            android:textSize="20dp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 소개"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/info_textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansregular"
                            android:maxLength="500"
                            android:background="@drawable/register_edge"
                            android:textColor="#000000"
                            android:text="식당 소개글 식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글식당 소개글"
                            android:textSize="18dp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="사업자 등록번호"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/info_textView11"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansregular"
                            android:background="@drawable/register_edge"
                            android:inputType="number"
                            android:maxLength="20"
                            android:textColor="#000000"
                            android:text="000-0000-000"
                            android:textSize="20dp" />

                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="위치"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/info_textView13"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansregular"
                            android:maxLength="100"
                            android:textColor="#000000"
                            android:background="@drawable/register_edge"
                            android:text="경기도 성남시 수정구 태평동 3045"
                            android:textSize="17dp" />

                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 사진"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/restaurant_image"
                            android:layout_width="78dp"
                            android:layout_height="73dp"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/ic_image" />
                    </FrameLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/info_textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="혼밥 여부"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/store_register_singleMeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/store_register_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ED6868"
                        android:checked="false"
                        android:fontFamily="@font/notosansregular"
                        android:text="가능"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/store_register_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:buttonTint="#ED6868"
                        android:fontFamily="@font/notosansregular"
                        android:text="불가능"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        tools:ignore="TouchTargetSizeCheck" />

                </RadioGroup>

                <TextView
                    android:id="@+id/info_textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 카테고리"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="13dp" />
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/info_edit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_circle3"
        android:fontFamily="@font/notosansbold"
        android:text="정보 수정하기"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</LinearLayout>