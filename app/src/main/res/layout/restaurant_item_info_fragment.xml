<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".store.Store_Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosansbold"
            android:gravity="center|bottom"
            android:text="식당 정보"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/info_textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 이름"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/info_resName"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ED6868"
                            android:fontFamily="@font/notosansregular"
                            android:textColor="#000000"
                            android:textColorHint="#939393"
                            android:textSize="13dp" />

                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 전화번호"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/info_phoneNumber"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ED6868"
                            android:fontFamily="@font/notosansregular"
                            android:textColor="#000000"
                            android:textColorHint="#939393"
                            android:textSize="13dp" />

                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="운영 시간"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/info_openTime"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ED6868"
                            android:fontFamily="@font/notosansregular"
                            android:textColor="#000000"
                            android:textColorHint="#939393"
                            android:textSize="13dp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 소개"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/info_resIntro"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ED6868"
                            android:fontFamily="@font/notosansregular"
                            android:textColor="#000000"
                            android:textColorHint="#939393"
                            android:textSize="13dp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="사업자 등록번호"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/Info_businessNumber"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ED6868"
                            android:fontFamily="@font/notosansregular"
                            android:textColor="#000000"
                            android:textColorHint="#939393"
                            android:textSize="13dp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="위치"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/info_location"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ED6868"
                            android:fontFamily="@font/notosansregular"
                            android:textColor="#000000"
                            android:textColorHint="#939393"
                            android:textSize="13dp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="혼밥 여부"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/info_textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_edge"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/info_textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text="식당 카테고리"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/info_textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/register_edge"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#000000"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_circle3"
        android:fontFamily="@font/notosansbold"
        android:text="정보 수정하기"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</LinearLayout>