<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".login.RegisterActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topMain"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:backgroundTint="#ffffff"
                app:navigationIcon="@drawable/back"
                app:navigationIconTint="#ED6868"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosansbold"
                    android:includeFontPadding="false"
                    android:textColor="#ED6868"
                    android:textSize="20dp"
                    android:text="회원 가입"/>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansregular"
                        android:text="아이디(이메일)"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/register_email"
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#ED6868"
                                android:fontFamily="@font/notosansregular"
                                android:hint="이메일 주소"
                                android:textColor="#000000"
                                android:textColorHint="#939393"
                                android:textSize="13dp" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/register_email_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:background="@drawable/circle_design2"
                                android:fontFamily="@font/notosansbold"
                                android:text="중복확인"
                                android:textColor="#ED6868" />
                        </FrameLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansregular"
                        android:text="비밀번호"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/register_pwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#ED6868"
                                android:fontFamily="@font/notosansregular"
                                android:hint="비밀번호"
                                android:textColor="#000000"
                                android:textColorHint="#939393"
                                android:textSize="13dp" />
                        </FrameLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansregular"
                        android:text="비밀번호 확인"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/regitser_pwd_check"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#ED6868"
                                android:fontFamily="@font/notosansregular"
                                android:hint="비밀번호 확인"
                                android:textColor="#000000"
                                android:textColorHint="#939393"
                                android:textSize="13dp" />
                        </FrameLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansregular"
                        android:text="이름"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/register_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#ED6868"
                                android:fontFamily="@font/notosansregular"
                                android:hint="실명을 입력하세요"
                                android:textColor="#000000"
                                android:textColorHint="#939393"
                                android:textSize="13dp" />
                        </FrameLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansregular"
                        android:text="생년월일"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/register_birthday"
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#ED6868"
                                android:fontFamily="@font/notosansregular"
                                android:hint="8자리 입력"
                                android:textColor="#000000"
                                android:textColorHint="#939393"
                                android:textSize="13dp" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/register_birthday_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:background="@drawable/circle_design2"
                                android:fontFamily="@font/notosansbold"
                                android:text="생일입력"
                                android:textColor="#ED6868" />
                        </FrameLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansregular"
                        android:text="성별"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <RadioGroup
                        android:id="@+id/register_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/register_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#ED6868"
                            android:checked="true"
                            android:fontFamily="@font/notosansregular"
                            android:text="여성"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            tools:ignore="TouchTargetSizeCheck" />
                        <RadioButton
                            android:id="@+id/register_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:buttonTint="#ED6868"
                            android:fontFamily="@font/notosansregular"
                            android:text="남성"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </RadioGroup>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_circle3"
                        android:fontFamily="@font/notosansbold"
                        android:text="회원가입"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>